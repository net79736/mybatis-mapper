<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.wrapper.mybatismapper.order.mapper.OrderMapper">
    <resultMap id="OrderListMap" type="org.wrapper.mybatismapper.order.vo.OrderVO">
        <id column="order_seq" property="seq" />
        <result column="userId" property="userId" />
        <result column="order_name" property="name" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="regDate" property="regDate" />
        <result column="editDate" property="editDate" />

        <collection property="productObjList" ofType="org.wrapper.mybatismapper.order.vo.ProductVO">
            <id column="product_seq" property="seq" />
            <result column="order_seq" property="orderSeq" />
            <result column="product_name" property="name" />
            <result column="price" property="price" />
            <result column="brand" property="brand" />
        </collection>
    </resultMap>

    <select id="selectOrderList" resultMap="OrderListMap">
        SELECT tb_o.seq AS order_seq,
               tb_o.userId,
               tb_o.name AS order_name,
               tb_o.email,
               tb_o.phone,
               tb_o.address,
               tb_o.regDate,
               tb_o.editDate,
               tb_p.seq AS product_seq,
               tb_p.order_seq,
               tb_p.name AS product_name,
               tb_p.price,
               <![CDATA[
                   CASE
                       WHEN tb_p.price > 50.0 THEN '고가'
                       ELSE NULL
                   END AS brand
               ]]>
        FROM tb_order tb_o JOIN tb_product tb_p ON CAST(tb_o.seq AS CHAR) = tb_p.order_seq
        <include refid="selectListOrderWhereClause" />
    </select>

    <select id="selectOrderListByOrderSeq" parameterType="java.util.List" resultMap="OrderListMap">
        SELECT tb_o.seq AS order_seq,
               tb_o.userId,
               tb_o.name AS order_name,
               tb_o.email,
               tb_o.phone,
               tb_o.address,
               tb_o.regDate,
               tb_o.editDate,
               tb_p.seq AS product_seq,
               tb_p.order_seq,
               tb_p.name AS product_name,
               tb_p.price
        FROM tb_order tb_o JOIN tb_product tb_p ON CAST(tb_o.seq AS CHAR) = tb_p.order_seq
        WHERE  1 = 1
        <if test="orderSeqList != null">
            <foreach collection="orderSeqList" item="seq" open="AND tb_o.seq IN (" separator="," close=")">#{seq}</foreach>
        </if>
    </select>

    <sql id="selectListOrderWhereClause">
        <!-- 목록 조회 조건절 -->

        <!-- 아이디 -->
        <if test="userId != null and userId != ''">
            AND tb_o.userId LIKE CONCAT(#{userId}, '%')
        </if>

        <!-- 이름 -->
        <if test="name != null and name != ''">
            AND tb_o.name LIKE CONCAT(#{name}, '%')
        </if>

        <!-- 이메일 -->
        <if test="email != null and email != ''">
            AND tb_o.email = #{email}
        </if>

        <!-- 주소 -->
        <if test="address != null and address != ''">
            AND tb_o.address = #{address}
        </if>

        <!-- 제품 -->
        <if test="productName != null and productName != ''">
            AND tb_p.name = #{productName}
        </if>

        <!-- 가격 -->
        <if test="price != null and price != ''">
            <![CDATA[
                AND tb_p.price <= #{price}
            ]]>
        </if>
    </sql>

</mapper>
